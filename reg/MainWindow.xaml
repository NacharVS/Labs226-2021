        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border HorizontalAlignment="Left" VerticalAlignment="Center">
            <Grid>
                <GroupBox x:Name="Registr" Header="Registr" HorizontalAlignment="Center" Height="434" VerticalAlignment="Center" Width="420" FontSize="20"/>

                <Button x:Name="btRegistr" Content="Registr" HorizontalAlignment="Left" Height="49" Margin="30,203,0,0" VerticalAlignment="Top" Width="153" FontSize="20" Click="btRegistr_Click"/>
                <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="29" Margin="30,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
                <TextBox x:Name="txtAge" HorizontalAlignment="Left" Height="29" Margin="30,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>

            </Grid>
        </Border>

    </Grid>
</Window>